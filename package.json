{
    "name": "messenger",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --port 3000",
        "build": "tsc && vite build",
        "lint:js": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:css": "stylelint \"src/**/*.css\"",
        "lint": "npm-run-all --parallel lint:css lint:js",
        "lint:fix-js": "eslint . --ext ts,tsx --fix",
        "lint:fix-css": "stylelint \"src/**/*.css\" --fix",
        "lint:fix": "npm-run-all --parallel lint:fix-js lint:fix-css",
        "test": "mocha",
        "start": "npm ci && npm run build && node server.cjs",
        "preview": "vite preview",
        "prepare": "husky"
    },
    "devDependencies": {
        "@types/chai": "^4.3.16",
        "@types/mocha": "^10.0.6",
        "@types/sinon": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "7.6.0",
        "@typescript-eslint/parser": "7.6.0",
        "chai": "5.1.1",
        "eslint": "8.57.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-airbnb-typescript": "18.0.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-import-resolver-typescript": "3.6.1",
        "eslint-plugin-prettier": "5.1.3",
        "express": "4.19.2",
        "husky": "9.0.11",
        "jsdom": "24.1.0",
        "mocha": "10.4.0",
        "npm-run-all": "4.1.5",
        "prettier": "3.2.5",
        "sinon": "^18.0.0",
        "stylelint": "16.3.1",
        "stylelint-config-standard": "36.0.0",
        "ts-node": "10.9.2",
        "typescript": "5.2.2",
        "vite": "5.2.11"
    },
    "dependencies": {
        "handlebars": "4.7.8",
        "nanoid": "5.0.7"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.6.1"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
