<div class="page">
    <div class="page__logo-container"></div>
    <div class="page__form-container">
        {{#box}}
            <form class="form" id="registration-form">
                <h2 class="form__title">Регистрация</h2>
                <fieldset class="form__fieldset">
                    {{> Input type="email" label="Почта" name="email" required=true}}
                    {{> Input type="text" label="Логин" name="login" required=true}}
                    {{> Input type="text" label="Имя" name="first_name"}}
                    {{> Input type="text" label="Фамилия" name="second_name"}}
                    {{> Input type="text" label="Телефон" name="phone"}}
                    {{> Input type="text" label="Пароль" name="password" required=true}}
                    {{> Input type="text" label="Пароль (еще раз)" name="password_confirm" required=true}}
                </fieldset>
                <div class="form__bottom">
                    {{> Button type="submit" variant="primary" fill="solid" text="Зарегистрироваться"}}
                    {{> Button type="button" variant="primary" fill="link" text="Войти"}}
                </div>
            </form>
        {{/box}}
    </div>
</div>